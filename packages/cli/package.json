{
    "name": "@valuerail/cli",
    "version": "1.0.0-beta.4",
    "author": "Kamil Guszpit",
    "license": "BUSL-1.1",
    "type": "module",
    "bin": {
        "vrail": "./dist/index.js"
    },
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "dist",
        "fonts"
    ],
    "scripts": {
        "dev": "bun --watch run src/index.tsx",
        "build": "bun build ./src/index.tsx --compile --outfile dist/vrail",
        "build:npm": "bun build ./src/index.tsx --target=node --format=esm --outfile dist/index.js --define:process.env.CLI_VERSION=\"\\\"$(jq -r .version package.json)\\\"\"",
        "postbuild:npm": "cp -r ../../node_modules/cfonts/fonts ./fonts",
        "lint": "echo 'linting...'"
    },
    "dependencies": {
        "@types/open": "^6.2.1",
        "ink": "^5.0.0",
        "ink-big-text": "^2.0.0",
        "ink-gradient": "^4.0.0",
        "ink-select-input": "^6.2.0",
        "ink-spinner": "^5.0.0",
        "open": "^11.0.0",
        "react": "^18.2.0",
        "zod": "^3.22.0"
    },
    "devDependencies": {
        "@valuerail/core": "file:../core",
        "@types/react": "^18.2.0",
        "bun-types": "latest",
        "react-devtools-core": "^7.0.1",
        "typescript": "^5.0.0"
    }
}
